
@{
    ViewBag.Title = "businessAdd";
}


<div class="row">
    <div class="colxl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="page-title-wrapper">
            <div class="page-title-box">
                <h4 class="page-title">İş İlanı Paylaş</h4>
            </div>
            <div class="breadcrumb-list">
                <ul>
                    <li class="breadcrumb-link">
                        <a href="/Home/Index"><i class="fas fa-home mr-2"></i>Anasayfa</a>
                    </li>
                    <li class="breadcrumb-link active">İş İlanı Paylaş</li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h3>@HttpContext.Current.User.Identity.Name</h3>

    </div>

    <div class="card-body">
        <form action="/Business_Support/businessAdd" method="post" role="form">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="form-group">
                    <label class="col-form-label">Meslek</label><br />

                    @Html.DropDownList("job", (IEnumerable
          <SelectListItem>)TempData["job"])
                    <br />
                    <label class="col-form-label">Başlık</label><br />
                    <input class="form-control" type="text" placeholder="Başlık" name="business_help_title">
                </div>
                <div class="form-group">
                    <label class="col-form-label">İçerik</label>
                    <input class="form-control" type="text" placeholder="İçerik" name="business_help_content">
                </div>
                <label class="col-form-label">Tecrübe Yılı</label><br />
                @Html.DropDownList("year", "Tecrübe Yılı")


                <div class="form-group">

                    <input class="form-control" type="hidden" placeholder=" " name="user_name" value="@HttpContext.Current.User.Identity.Name">
                </div>

                <div class="form-group mb-0">
                    <button type="submit" class="btn btn-primary">İş İlanı Paylaş</button>

                    <a href="/Business_Support/Index" class="btn btn-light" data-bs-dismiss="modal">İptal</a>
                </div>
            </div>
        </form>
    </div>
</div>